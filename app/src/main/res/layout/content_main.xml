<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:id="@+id/courierClicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:onClick="onCourierClicker"
        android:text="@string/clicker"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.026"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/courierDiary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:onClick="onCourierRecord"
        android:text="@string/record"
        app:layout_constraintEnd_toEndOf="@+id/courierClicker"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/courierClicker"
        app:layout_constraintTop_toBottomOf="@+id/courierClicker" />

    <Button
        android:id="@+id/courierCarousel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:onClick="onCourierCarousel"
        android:text="Carousel"
        app:layout_constraintEnd_toEndOf="@+id/courierDiary"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/courierDiary"
        app:layout_constraintTop_toBottomOf="@+id/courierDiary" />

    <Button
        android:id="@+id/courierStream"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="24dp"
        android:onClick="onCourierStream"
        android:text="Stream"
        app:layout_constraintEnd_toEndOf="@+id/courierCarousel"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/courierCarousel"
        app:layout_constraintTop_toBottomOf="@+id/courierCarousel" />

    <Button
        android:id="@+id/courierPreferences"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:onClick="onCourierPreferences"
        android:text="Preferences"
        app:layout_constraintEnd_toEndOf="@+id/courierStream"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/courierStream"
        app:layout_constraintTop_toBottomOf="@+id/courierStream" />
</androidx.constraintlayout.widget.ConstraintLayout>